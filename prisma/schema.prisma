datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    image       String
    link        String
    name        String
    description String?
    contribution String?
    skills      String[]
    type        String
}

model Contact {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    org         String
    email       String
    title       String
    phone       String
    message     String
    createdAt   DateTime @default(now())
}

model Experience{
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    company     String?
    description String
    tenure      String
    skills      String[]
}